<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textTab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tab_text_3"
        android:textSize="25sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:id="@+id/diningOption2"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="@string/diningOption2" />

        <RadioButton
            android:id="@+id/diningOption"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:text="@string/diningOption" />

        <RadioButton
            android:id="@+id/diningOption3"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:text="@string/diningOption3" />

        <Button
            android:id="@+id/button_Submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Submit"
            android:visibility="visible" />

    </RadioGroup>

</android.support.design.widget.CoordinatorLayout>