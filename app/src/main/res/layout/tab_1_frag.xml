<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/background_light"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textTab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Taste"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/checkBox_Persian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Chinese"
        android:text="Persian"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/checkBox_Chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Korean"
        android:text="Chinese"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/checkBox_Korean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Italian"
        android:text="Korean"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/checkBox_Italian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Vietnamese"
        android:text="Italian"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"/>

    <CheckBox
        android:id="@+id/checkBox_Vietnamese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Japanese"
        android:text="Vietnamese"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"/>

    <CheckBox
        android:id="@+id/checkBox_Japanese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_Mexican"
        android:text="Japanese"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"/>

    <CheckBox
        android:id="@+id/checkBox_Mexican"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox_American"
        android:text="Mexican"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"/>

    <CheckBox
        android:id="@+id/checkBox_American"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:text="American"
        android:textSize="20sp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Submit" />

</RelativeLayout>